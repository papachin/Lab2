<!DOCTYPE html>
<html>
  
  <head>
    <title>
      <%= full_title(yield(:title)) %>
    </title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>
  
  <body>
    
    <!--header call-->
    <%= render 'layouts/header' %>
    
    <div class="container">
      
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
      
      <%= yield %>
      
      <!--footer call-->
      <%= render 'layouts/footer' %>
      
      <!-- debug show -->
      <% #debug(params) if Rails.env.development? %>
      
    </div>
  </body>
</html>
